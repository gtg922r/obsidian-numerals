{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2018",
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"esModuleInterop":true,
	"skipLibCheck": true,
    "lib": [
      "DOM",
      "ES2021"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
